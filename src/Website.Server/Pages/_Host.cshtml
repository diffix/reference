@using Bolero.Server.RazorHost
@inject IBoleroHostConfig BoleroHostConfig
<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Open Diffix - Playground</title>
    <base href="/">
    <link rel="stylesheet" href="css/styles.css">
  </head>
  <body>
    <div id="main">@(await Html.RenderComponentAsync<Website.Client.Main.MyApp>(BoleroHostConfig))</div>
    @Html.RenderBoleroScript(BoleroHostConfig)
